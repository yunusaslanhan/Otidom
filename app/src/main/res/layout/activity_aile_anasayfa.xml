<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yunus.otidom.AileAnasayfa"

    >


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginRight="44dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="205dp"
        android:text="Lütfen giriş yapmak istediğiniz kategoriyi seçiniz..."
        android:textAlignment="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/btnAile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAile"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="194dp"
        android:layout_marginRight="34dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="34dp"
        android:background="@android:color/holo_red_light"
        android:text="Aile"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCocuk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/btnCocuk"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginBottom="194dp"
        android:layout_marginRight="54dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_green_dark"
        android:text="Çocuk"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAile"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.0" />




</android.support.constraint.ConstraintLayout>
